# 前端 Dockerfile
FROM node:18-alpine AS builder

# 設定工作目錄
WORKDIR /app

# 複製 package.json 和 package-lock.json
COPY package*.json ./

# 安裝依賴
RUN npm ci

# 複製原始碼
COPY . .

# 建置專案
RUN npm run build

# 檢查建置輸出
RUN ls -la /app/dist

# 使用 nginx 提供靜態檔案
FROM nginx:alpine

# 複製建置好的檔案到 nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# 複製 nginx 配置
COPY nginx.conf /etc/nginx/nginx.conf

# 測試 nginx 配置
RUN nginx -t

# 暴露端口
EXPOSE 80

# 啟動 nginx
CMD ["nginx", "-g", "daemon off;"]
